                  <Label fx:id="totalConfirmed" prefHeight="113.0" prefWidth="320.0" style="-fx-background-color: #454545;" textAlignment="CENTER" />
                  <Label fx:id="totalConfirmedNumber" prefHeight="114.0" prefWidth="320.0" style="-fx-background-color: #454545;" textAlignment="CENTER" />
               </children>
            </VBox>
            <ListView fx:id="countryList" onMouseClicked="#countryClicked" prefHeight="612.0" prefWidth="321.0" style="-fx-background-color: #454545; -fx-border-color: #e1eb2f;" />
         </children>
      </FlowPane>
   </left>
