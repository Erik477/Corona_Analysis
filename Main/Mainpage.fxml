              <xAxis>
                <CategoryAxis side="BOTTOM" tickLabelFill="#e1eb2f" />
              </xAxis>
              <yAxis>
                <NumberAxis side="LEFT" tickLabelFill="#e1eb2f" />
              </yAxis>
            </LineChart>
         </children>
      </FlowPane>
   </right>
