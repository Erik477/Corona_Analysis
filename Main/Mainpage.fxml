      <FlowPane prefHeight="826.0" prefWidth="445.0" style="-fx-background-color: #454545; -fx-border-color: #e1eb2f;" BorderPane.alignment="CENTER">

         <children>
            <Button fx:id="Cases" mnemonicParsing="false" text="Cases" />
