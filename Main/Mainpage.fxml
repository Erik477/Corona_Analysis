<BorderPane prefHeight="900.0" prefWidth="1800.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Main.MainController">
   <top>
      <VBox style="-fx-background-color: #292929;" BorderPane.alignment="CENTER">
         <children>
            <HBox spacing="10.0" style="-fx-border-color: #41464f;">
               <VBox.margin>
