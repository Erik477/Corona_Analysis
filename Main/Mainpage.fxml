                  <Label style="-fx-background-color: #292929 #292929;" text="COVID-19 Analysis by Erik and Fubus" textFill="#df0f0f">
                     <font>
                        <Font size="22.0" />
                     </font>
                  </Label>
                  <Region style="-fx-background-color: #292929;" HBox.hgrow="ALWAYS" />
                  <FontAwesomeIconView fill="#48dbfb" glyphName="MINUS" size="20" />
                  <FontAwesomeIconView fill="#ee5253" glyphName="CLOSE" size="20">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </FontAwesomeIconView>
               </children>
            </HBox>
         </children>
      </VBox>
   </top>
   <bottom>
      <HBox prefHeight="37.0" prefWidth="1800.0" style="-fx-background-color: #454545; -fx-border-color: #e1eb2f;" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" text="FAQ" />
            <Region />
            <Button fx:id="About" mnemonicParsing="false" text="About" />
            <Region />
            <Button mnemonicParsing="false" text="Help" />
            <Region />
            <Button mnemonicParsing="false" text="Privacy Policy" />
            <Region />
            <Button mnemonicParsing="false" text="Contact us" />
            <Region />
            <Button mnemonicParsing="false" text="Work for us" />
            <Region />
            <Button fx:id="Claim" mnemonicParsing="false" text="Claim" />
         </children>
      </HBox>
   </bottom>
   <center>
      <Pane focusTraversable="true" prefHeight="814.0" prefWidth="918.0" style="-fx-background-color: #454545; -fx-border-color: #e1eb2f;" BorderPane.alignment="CENTER" />
   </center>
   <left>
      <FlowPane prefHeight="802.0" prefWidth="322.0" style="-fx-background-color: #41464f; -fx-border-color: #e1eb2f;" BorderPane.alignment="CENTER">
         <children>
            <VBox prefHeight="200.0" prefWidth="320.0">
